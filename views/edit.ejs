<!DOCTYPE html>
<html lang="en">
  <%-include("./partials/head.ejs") %>
  <body>
    <%-include("./partials/navbar.ejs") %>
    <div class="container text-white mt-5" style="min-height: 100vh">
      <div class="row">
        <div class="col-sm-6 mx-auto">
          <h2 class="my-3 pl-3" style="border-left: 4px solid red">
            Update Blog
          </h2>
          <div class="card blog-card-c p-3 text-white-50">
            <% if (admin) { %>

            <form action="/edit/<%= blog.id %> " method="POST">
              <div class="form-group mb-3">
                <label for="title">Title</label>
                <textarea
                  type="text"
                  name="title"
                  class="form-control input-bg"
                  placeholder="name"
                  autocomplete="off"
                  rows="1"
                ><%= blog.title %> </textarea>
              </div>
               <div class="form-group mb-3">
                <label for="author">Title</label>
                <textarea
                  type="text"
                  name="author"
                  class="form-control input-bg"
                  placeholder="Author"
                  autocomplete="off"
                  rows="1"
                ><%= blog.author %> </textarea>
              </div>
              <div class="form-group mb-3">
                <label for="content">Content</label>
              <textarea name="content" id="content" rows="10"  class="form-control">
<%= blog.content %> 

              </textarea>
              </div>
              <button class="btn btn-danger mt-3">Update</button>
            </form>
          </div>
            <% } else { %>
        
          <h1 class="text-center">You are not admin</h1>
        
        <% } %>
        </div>
      
      </div>
    </div>
  </div>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
